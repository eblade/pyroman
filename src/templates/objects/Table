Use: Table

Template: Table
output: html
place: body
<div class="gtable">
    <div class="gtablecaptionholder">
        <div class="gtablecaption">
            <a class="gheading" name="%safe_title%">
                <span class="gtablenumber">%numberingtable%</span>
            </a>
            %caption%
        </div>
    </div>
    <table class="gtable">
        <thead>
            <tr>
                %$Headers using TableHeader%
            </tr>
        </thead>
        <tbody>
                %$Rows using TableRow%
        </tbody>
    </table>
</div>

Template: TableHeader
output: html
place: body
                <th class="gtablecell">%text%</th>

Template: TableRow
output: html
place: body
            <tr>%$Cells using TableCell%</tr>

Template: TableCell
output: html
place: body
                <td class="gtablecell">%text%</td>

Template: Table
output: html
place: style
div.gtable {
    margin-top:         1cm;
    margin-bottom:      1cm;
    font-size: 		10pt;
}
