    font-family:        helvetica, arial;
    font-style:         italic;
    font-size:          10pt;
    margin-bottom:      0px;
    color:              #666;
}
th.gtablecell {
    text-align:   left;
}
td.gtablecell {
    vertical-align:     top;
}
